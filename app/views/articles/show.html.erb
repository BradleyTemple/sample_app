<div class="page-header">
  <h1><%= @article.title %></h1>
  <p><small>Posted by <%= @article.author %></small></p>
</div>
  <p><%= link_to "Printer Friendly Version", article_path(@article, format: "pdf"), :class => "btn btn-primary btn-mini" %></p>
  <p><%= markdown @article.body %></p>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              articles_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_article_path(@article), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              article_path(@article),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
